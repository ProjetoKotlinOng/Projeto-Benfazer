<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="30dp"
    android:padding="20dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textProd"
                android:layout_width="357dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/lato_bold"
                android:textAlignment="center"
                android:textColor="#515050"
                android:textSize="30sp"
                tools:text="Produto" />

            <ImageButton
                android:id="@+id/editButton"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:contentDescription="@string/Editcadastrar"
                android:minHeight="48dp"
                app:srcCompat="@drawable/ic_baseline_edit_24" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ImageOng"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            app:srcCompat="@drawable/criancas"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/textDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/lato_bold"
            android:textAlignment="center"
            android:textColor="#515050"
            android:textSize="28sp"
            tools:text="Descrição" />

        <TextView
            android:id="@+id/textQuant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/lato_bold"
            android:textAlignment="center"
            android:textColor="#515050"
            android:textSize="28sp"
            tools:text="Quantidade" />

        <TextView
            android:id="@+id/textValor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/lato_bold"
            android:textAlignment="center"
            android:textColor="#515050"
            android:textSize="28sp"
            tools:text="Valor" />

        <TextView
            android:id="@+id/textCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/lato_bold"
            android:textAlignment="center"
            android:textColor="#515050"
            android:textSize="28sp"
            tools:text="Categoria" />

        <Button
            android:id="@+id/ComprarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="#90CAF9"
            android:text="@string/comprar"
            android:textColor="#546E7A"
            android:textSize="20sp"
            app:cornerRadius="20dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>